{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ADB: Devices",
            "type": "shell",
            "command": "source scripts/EXPORTS.zsh && adb devices",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "AVD: Create Pixel34",
            "type": "shell",
            "command": "source scripts/EXPORTS.zsh && avdmanager create avd -n Pixel34 -k 'system-images;android-34;google_apis;arm64-v8a' --device pixel_7 --force",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Emulator: Start Pixel34",
            "type": "shell",
            "command": "source scripts/EXPORTS.zsh && ${ANDROID_SDK_ROOT}/emulator/emulator -avd Pixel34",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "dependsOn": ["AVD: Create Pixel34"]
        },
        {
            "label": "Assemble Debug",
            "type": "shell",
            "command": "source scripts/EXPORTS.zsh && ./gradlew :app:assembleDebug",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Install Debug",
            "type": "shell",
            "command": "source scripts/EXPORTS.zsh && ./gradlew :app:installDebug",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Launch MainActivity",
            "type": "shell",
            "command": "source scripts/EXPORTS.zsh && adb shell am start -n com.guide.app/.MainActivity",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
